<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand nav-button NavBarButton" href="">Home</a>
        <button title="Navigation menu" style="position: absolute; top: 10px; right: 10px;" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="horizontal-nav">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Doctors" Match="NavLinkMatch.All">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Doctors
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Patients">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Patients
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Staffs">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Staff
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Departments">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Departments
            </NavLink>
        </div>

    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
